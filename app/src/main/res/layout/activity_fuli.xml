<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        skin:enable="true">
        <LinearLayout
            android:id="@+id/title_layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_layout_back_iv"
                android:layout_width="@dimen/margin_size_20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10dp"
                android:src="@drawable/main_back_img" />

            <TextView
                android:id="@+id/title_layout_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_17sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="福利"
            android:textColor="#fff"
            android:textSize="@dimen/font_size_20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/activity_fuli_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/activity_fuli_wenxue_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20dp"
            android:background="@drawable/corner_blue_color_5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/activity_fuli_wenxue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:layout_marginBottom="@dimen/margin_size_10dp"
                android:gravity="center"
                android:text="文学区"
                android:textSize="@dimen/font_size_30sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/activity_fuli_wenxue_ll"
                android:layout_below="@id/activity_fuli_wenxue"
                android:layout_marginBottom="@dimen/margin_size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_wenxue_tuijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="推荐区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_wenxue_jingpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="精品区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_wenxue_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="新帖区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_fuli_pic_rl"
            android:layout_below="@id/activity_fuli_wenxue_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20dp"
            android:background="@drawable/corner_blue_color_5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/activity_fuli_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:layout_marginBottom="@dimen/margin_size_10dp"
                android:gravity="center"
                android:text="图片区"
                android:textSize="@dimen/font_size_30sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/activity_fuli_pic_ll"
                android:layout_below="@id/activity_fuli_pic"
                android:layout_marginBottom="@dimen/margin_size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_pic_tuijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="推荐区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_pic_jingpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="精品区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_pic_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="新帖区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_fuli_link_rl"
            android:layout_below="@id/activity_fuli_pic_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20dp"
            android:background="@drawable/corner_blue_color_5dp"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/activity_fuli_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10dp"
                android:layout_marginBottom="@dimen/margin_size_10dp"
                android:gravity="center"
                android:text="下载区"
                android:textSize="@dimen/font_size_30sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/activity_fuli_link_ll"
                android:layout_below="@id/activity_fuli_link"
                android:layout_marginBottom="@dimen/margin_size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_link_tuijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="推荐区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_link_jingpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="精品区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/activity_fuli_link_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_size_5dp"
                        android:text="新帖区"
                        android:textSize="@dimen/font_size_20sp"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        skin:enable="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bannerContainer_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_20dp"
            android:layout_marginRight="@dimen/margin_size_20dp"
            android:text="开发者心声：\n原本是打算为狼友提供绿色环境阅读和浏览的，但是由于部分使用者恶意攻击，使得维护成本提升。\n在不影响狼友阅读的前提下，不得不结合广告。望见谅。\n\n希望广大狼友有空可以点击下广告，您的每一次点击都能帮助维护更持久 服务平台。\n当然也可以给开发者发个小红包什么的。\n\n我的微信和QQ都是： 2443938389。\n * 加友备注（超级笔记1024）"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_20dp"
            android:layout_marginRight="@dimen/margin_size_20dp"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:text="这个是广告哦 ^_^  ↓"
            android:textSize="@dimen/font_size_20sp"
            android:textColor="@color/green"/>
        <FrameLayout
            android:id="@+id/bannerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_20dp">
        </FrameLayout>
    </LinearLayout>
</LinearLayout>