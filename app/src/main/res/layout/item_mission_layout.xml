<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray_black">

    <RelativeLayout
        android:id="@+id/item_mission_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_size_10dp"
        android:layout_marginStart="@dimen/margin_size_10dp"
        android:layout_marginTop="@dimen/margin_size_10dp"
        android:layout_marginBottom="@dimen/margin_size_10dp"
        android:background="@drawable/corner_white_color_5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mission_layout_title"
            style="@style/singleLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20sp"/>
        <TextView
            android:id="@+id/item_mission_layout_content"
            android:layout_width="@dimen/margin_size_1dp"
            android:layout_height="@dimen/margin_size_1dp"/>

        <TextView
            android:id="@+id/item_mission_layout_time"
            android:layout_below="@id/item_mission_layout_title"
            style="@style/singleLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_30dp"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:gravity="center|left"
            android:text="10月24日 05:00"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15sp" />
    </RelativeLayout>
</RelativeLayout>