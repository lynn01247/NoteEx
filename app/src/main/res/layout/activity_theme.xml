<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        skin:enable="true">
        <LinearLayout
            android:id="@+id/title_layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_layout_back_iv"
                android:layout_width="@dimen/margin_size_20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_10dp"
                android:src="@drawable/main_back_img" />

            <TextView
                android:id="@+id/title_layout_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_17sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="主题风格"
            android:textColor="#fff"
            android:textSize="@dimen/font_size_20sp" />
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_10dp"
            android:text="我的皮肤"

            android:textColor="@color/actionsheet_gray"
            android:textSize="@dimen/font_size_15sp" />

        <RelativeLayout
            android:id="@+id/theme_default_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/theme_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_size_40dp"
                android:gravity="center"
                android:paddingStart="@dimen/margin_size_20dp"
                android:text="蓝色风暴（默认）"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:id="@+id/theme_default_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size_5dp"
                android:layout_marginBottom="@dimen/margin_size_5dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="@color/gray_line"
                android:layout_marginEnd="@dimen/margin_size_30dp"
                android:padding="@dimen/margin_size_5dp"
                android:text="未使用"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/theme_red_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/theme_red"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_size_40dp"
                android:gravity="center"
                android:paddingStart="@dimen/margin_size_20dp"
                android:text="红色旋涡"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:id="@+id/theme_red_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size_5dp"
                android:layout_marginBottom="@dimen/margin_size_5dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginEnd="@dimen/margin_size_30dp"
                android:padding="@dimen/margin_size_5dp"
                android:text="未下载"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/theme_gray_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginBottom="@dimen/margin_size_10dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/theme_gray"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_size_40dp"
                android:gravity="center"
                android:paddingStart="@dimen/margin_size_20dp"
                android:text="灰色幽默"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:id="@+id/theme_gray_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_size_5dp"
                android:layout_marginBottom="@dimen/margin_size_5dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_marginEnd="@dimen/margin_size_30dp"
                android:padding="@dimen/margin_size_5dp"
                android:text="未下载"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>