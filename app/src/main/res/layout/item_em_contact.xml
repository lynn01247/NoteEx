<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="@dimen/margin_size_2dp"
        android:paddingStart="@dimen/margin_size_10dp"
        android:paddingTop="@dimen/margin_size_2dp"
        android:textColor="#8a99ac"
        android:textSize="@dimen/font_size_17sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_60dp"
        android:duplicateParentState="true">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/margin_size_43dp"
            android:layout_height="@dimen/margin_size_43dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/em_default_avatar" />

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_20dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_14sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_size_11dp"
            android:layout_toStartOf="@+id/unread_msg_number"
            android:layout_toEndOf="@id/iv_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_size_4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#8C8C8C"
                    android:textSize="@dimen/font_size_18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_size_4dp"
                android:layout_marginTop="@dimen/margin_size_4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="@dimen/font_size_15sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>