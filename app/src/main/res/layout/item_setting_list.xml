<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_60dp"
        android:orientation="horizontal">

        <tatait.com.noteex.util.CircleImageView
            android:id="@+id/nav_main_setting_img"
            android:layout_width="@dimen/margin_size_40dp"
            android:layout_height="@dimen/margin_size_40dp"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:alpha="0.4"
            android:src="@drawable/nav_setting" />

        <View
            android:layout_width="@dimen/margin_size_0.1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_size_10dp"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:background="@color/gray_dark"
            android:layerType="software" />

        <TextView
            android:id="@+id/nav_main_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_size_20dp"
            android:alpha="0.4"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_size_17dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_5dp"
        android:background="@drawable/shap"
        android:layerType="software"
        android:visibility="gone" />
</LinearLayout>